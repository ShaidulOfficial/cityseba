<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:outlineSpotShadowColor="@color/app_themecolor1"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_lay_background">

                <ImageView
                    android:id="@+id/newsImageLogoItem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:padding="@dimen/_2sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/chandpur" />

                <TextView
                    android:id="@+id/idNumberTv_item_newsPaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newsImageLogoItem"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/kalpurush"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="ID No : wlr5fgnkn!jjs"
                    android:textColor="@color/black1"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/name_item_newsPaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idNumberTv_item_newsPaper"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/kalpurush"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingStart="@dimen/_10sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Prothom Alo"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/_18ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_item_newsPaper"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_2sdp"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/edit_item_news"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:src="@drawable/edit_24"
                        app:tint="@color/app_themecolor" />

                    <ImageView
                        android:id="@+id/delete_item_news"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:src="@drawable/delete_forever_24"
                        app:tint="@color/app_themecolor" />


                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/app_themecolor" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>