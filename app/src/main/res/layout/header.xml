<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginBottom="15dp"
        android:id="@+id/drawarHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/drawerbg"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_25sdp"
            android:outlineSpotShadowColor="@color/app_themecolor"
            android:layout_marginLeft="@dimen/_1sdp"
            android:backgroundTint="@color/app_themecolor1"
            >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_margin="@dimen/_2sdp"
                    >

                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/chandpur" />


                </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/regular"
                android:text="@string/headerView1"
                android:textAlignment="center"
                android:textColor="@color/developerbg"
                android:textSize="@dimen/_20ssp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/regular"
                android:text="@string/headerView2"
                android:textAlignment="center"
                android:textColor="@color/developerbg"
                android:textSize="@dimen/_14ssp"
                />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>