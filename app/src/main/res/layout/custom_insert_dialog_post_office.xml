<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_con_lay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">
<TextView
    android:id="@+id/head_title_tvPO"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:text="তথ্য দিন"
    android:textSize="@dimen/_22ssp"
    android:textColor="@color/black"
    android:textAlignment="center"
    android:textStyle="bold"
     android:fontFamily="@font/kalpurush"

    />
        <EditText
            android:id="@+id/name_edtPO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:hint="ডাকঘর..."
            android:inputType="textCapWords|textAutoCorrect|textFilter|textPersonName|textAutoComplete"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />


        <EditText
            android:id="@+id/postalCode_edtPO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:hint="পোস্ট কোড..."
            android:inputType="number"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_btnPO"
                android:layout_marginHorizontal="5dp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/login_btn_bg"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_btnPO"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/login_btn_bg"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>